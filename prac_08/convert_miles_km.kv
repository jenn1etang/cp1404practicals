BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text:
            on_text: app.handle_miles_to_km()
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
#        on_press: app.handle_miles_to_km(input_number.text)
    Label:
        id: output_label
        text: app.result
        color: (1, 1, 0, 1)